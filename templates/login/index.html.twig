{% extends 'gallery.html.twig' %}

{% block navbar %}
    <li class="nav-item active">
        <a class="nav-link" href="{{ path('app_login') }}"><i class="fa fa-sign-in-alt" aria-hidden="true"></i>&nbsp;Login</a>
    </li> 
{% endblock %}

{% block container %} 
    <div class="page-content">
        <div class="container">
            <div class="pp-section pp-container-readable">
                <div class="pp-post"> 
                <form action="{{path('app_login')}}" method="post">
                    <fieldset id="fieldset">
                    <legend id="legend"><a class="h3" href="#">Login Form</a></legend>
                    <dl>
                        <table>
                            <tr>
                                <th><label for="username">Username</label></th>
                                <td><input type="text" id="username" name="_username"></td>
                            </tr>
                            <tr>
                                <th><label for="password">Password</label></th>
                                <td><input type="password" id="password" name="_password"></td>
                            </tr>
                            {% if error %}
                                <tr>
                                    <th></th>
                                    <td>
                                    <span class="error">*Invalid account. Please try again!</span>
                                    <td>
                                </tr>
                            {% endif %}  
                            <tr>
                                <th></th>
                                <td><em>If you haven't had an account, sign up <a href="{{path('app_register')}}">here</a>!</em></td>
                            </tr>  
                            <tr>
                                <th></th>
                                <td align="right"><button class="btn btn-primary" id="submit" type="submit" value="Login">Login</button></td>
                            </tr>  
                        </table> 
                    </dl>
                </form> 
                </div>
            </div>
        </div>
        <div class="pp-section"></div>
    </div> 
    <style>  
        #fieldset {
            border: dashed black 2px; 
            border-radius: 2px;
        }
        #legend {
            width: auto;
            margin-left: 2rem;
        } 
        table {
            margin: auto;
            width: 90%;
        } 
        th { 
            padding: 0.5rem 0 0 0;
            width: 20%;
        } 
        td {
            padding: 0.5rem 0 0 0;
        }    
        #username, #password {
            width: 100%;
            height: 1.75rem; 
            padding: 0 0.5rem 0 0.5rem; 
        }
        .error {
            color: red; 
        } 
    </style>
{% endblock %}
